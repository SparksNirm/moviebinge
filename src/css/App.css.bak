/* Sign In Page*/
.App{
  margin:1rem
}

.header{
  position: fixed;
}


.error{
  color:red
}


/* SlideShow */

.slideshow {
  margin: 0 auto;
  overflow: hidden;
  max-width: 100%;
  max-height: 400px;
}

.slideshowSlider {
  white-space: nowrap;
  transition: ease 1000ms;
}


.loginform{
  border-color: aliceblue;
}
.slide {
  display: inline-flex;
  height: 100%;
  justify-content: center;
  width: 100%;
  border-radius: 40px;
}

/* Buttons */
.slideshowDots {
  text-align: center;
}
.slideshowDot {
  display: inline-block;
  height: 20px;
  width: 20px;
  border-radius: 50%;
  cursor: pointer;
  margin: 15px 7px 0px;
  background-color: #c4c4c4;
}


.slideshowDot.active {
  background-color: black;
  opacity: 50%;
}

/* Images */

.image{
    float: left;
    height: 400px;
    background-size: cover;
}


/*Margin*/

.login{
  margin-right: 1%;
  margin-top: 10%;
  margin-bottom: 12%;
}
.movienames{
  color: black;
  display: inline;
}

.link{
  color:blue;
  text-decoration: underline;
}

/* Featured movie part*/
.featuredmovieimage{
  float: left;
  width:  230px;
  height: 350px;
  margin-right: 1%;
  margin-bottom: 1%;
  background-size: cover;
}

.featuredmovie{
  display: flex;
  overflow-x: hidden;
  overflow-y: hidden;
  max-width: 100%;
  position: relative;
  max-height: 380px;  
  white-space: nowrap;
}

.movieListimage{
  float: left;
  width:  245px;
  height: 353px;
  margin-right: 1%;
  margin-bottom: 1%;
  background-size: cover;
}

.moviedetailsimage{
  float: left;
  width:  250px;
  height: 375px;
  opacity: 90%;
  margin-right: 1%;
  margin-bottom: 1%;
  background-size: cover;
}

.moviecontent{
  display: inline-block;
  margin:5px;
  border: 2px solid #c4c4c4;
}

.back{
  margin-left: 250px;
  position: fixed; 
  width: 100%;
  height: 100%;
  max-height: 375px; 
  z-index: 1;
  opacity: 0.4;
}
.moviedetails{
  display: flex;
  position: relative; 
  width: 98%;
  height: 375px;
  z-index: 2;
  /* justify-content: flex-start; */
}


.moviesList{
  display: inline-block;
  margin-left:6%;
  margin-right:5%;
}

.featuremovieheading{
  display: flex;
  margin:3px;
  justify-content: space-between;
}


a{
  text-decoration: none;
  color: black;
  
}

span{
  margin:5px
}

/*Content Section*/

.contentsection{
  margin: 0;
  background-color: #515151;
  color:white
}
.contenttext{
  margin: 0%;
  font-size: 35px;
  display: flex;
  align-content: center;
  align-items: center;
  justify-content: center;
  text-decoration:black
}

